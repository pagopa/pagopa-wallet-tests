{
	"info": {
		"_postman_id": "b2d4f8a1-3e5c-4f9b-8d2g-9c6b7e4f8a1b",
		"name": "pagoPA Checkout Payment Wallet API - PAYPAL - OneIdentity",
		"description": "API to test checkout payment wallet endpoints for retrieving user wallets by fiscal code (PAYPAL) - UAT version with real OneIdentity",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Checkout Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[Checkout Auth] Get login URL should return 200 with valid url redirect\", function () {",
							"    pm.response.to.have.status(200);",
							"    const responseJson = pm.response.json();",
							"    const urlRedirect = responseJson.urlRedirect;",
							"    const queryParams = urlRedirect.split(\"?\")[1].split(\"&\");",
							"    const state = queryParams.find(q => q.includes(\"state\")).split(\"=\")[1];",
							"    const nonce = queryParams.find(q => q.includes(\"nonce\")).split(\"=\")[1];",
							"    pm.expect(state).to.be.a(\"string\");",
							"    pm.expect(nonce).to.be.a(\"string\");",
							"    pm.environment.set(\"CHECKOUT_STATE\", state);",
							"    pm.environment.set(\"CHECKOUT_NONCE\", nonce);",
							"    pm.environment.set(\"CHECKOUT_REDIRECT_URL\", urlRedirect);",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{ENV}}/checkout/auth-service/v1/auth/login?recaptcha={{FAKE_RECAPTCHA}}",
					"host": [
						"{{ENV}}"
					],
					"path": [
						"checkout",
						"auth-service",
						"v1",
						"auth",
						"login"
					],
					"query": [
						{
							"key": "recaptcha",
							"value": "{{FAKE_RECAPTCHA}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Checkout OneIdentity Redirect",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[Checkout Auth - OneIdentity] OneIdentity redirect should return 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [],
				"url": "{{CHECKOUT_REDIRECT_URL}}"
			},
			"response": []
		},
		{
			"name": "Checkout Auth Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[Checkout Auth - OneIdentity] POST auth token 401 with bad auth code\", function () {",
							"    pm.response.to.have.status(401);",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"state\": \"some-invalid-state\",\n    \"authCode\": \"some-invalid-code\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{ENV}}/checkout/auth-service/v1/auth/token",
					"host": [
						"{{ENV}}"
					],
					"path": [
						"checkout",
						"auth-service",
						"v1",
						"auth",
						"token"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get wallets by user fiscal code",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"[Wallet for onboarding - PAYPAL - OneIdentity] GET /users/wallets returns 401 without valid auth\", function () {",
							"    pm.response.to.have.status(401);",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{AUTH_TOKEN}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json"
					}
				],
				"url": {
					"raw": "{{ENV}}{{CHECKOUT_PAYMENT_WALLET_SERVICE}}/users/wallets",
					"host": [
						"{{ENV}}{{CHECKOUT_PAYMENT_WALLET_SERVICE}}"
					],
					"path": [
						"users",
						"wallets"
					]
				},
				"description": "Gets wallets for user identified by fiscal code in auth token"
			},
			"response": []
		}
	],
	"variable": []
}