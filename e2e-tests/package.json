{
  "name": "user-interface-tests",
  "version": "1.0.0",
  "description": "Test automation for Wallet FE",
  "author": "Fernando Granato",
  "license": "MIT",
  "scripts": {
    "test:NPG": "dotenv -e .env jest src/NPG --detectOpenHandles --reporters=jest-junit",
    "test:NPG:payment": "dotenv -e .env jest src/NPG/payment --detectOpenHandles --reporters=jest-junit",
    "test:NPG:onboarding": "dotenv -e .env jest src/NPG/onboarding --detectOpenHandles --reporters=jest-junit",
    "test": "dotenv -e .env jest --detectOpenHandles --reporters=jest-junit",
    "lint": "eslint . -c .eslintrc.json",
    "pw:install": "playwright install chromium",
    "pw:test": "dotenv -e .env playwright test",
    "pw:test:guest": "dotenv -e .env playwright test test/playwright/guest-payment",
    "pw:ui": "dotenv -e .env playwright test --ui",
    "pw:report": "playwright show-report"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@playwright/test": "^1.48.0",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-puppeteer": "^9.0.0",
    "puppeteer": "^21.1.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  }
}
